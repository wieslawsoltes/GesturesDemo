<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:g="clr-namespace:Gestures;assembly=Gestures"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GesturesDemo.MainView">

  <g:ZoomControl Name="PanAndZoomPanel">

    <g:ZoomControl.GestureRecognizers>
      <!-- <g:PanGestureRecognizer RequiredPointers="3" /> -->
      <g:PinchToZoomGestureRecognizer IsZoomable="True" />
    </g:ZoomControl.GestureRecognizers>

    <Canvas Width="300" Height="300" Background="WhiteSmoke">
      <Rectangle Canvas.Left="100" Canvas.Top="100" Width="100" Height="100" Fill="Red" />
    </Canvas>

  </g:ZoomControl>

</UserControl>

